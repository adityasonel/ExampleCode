<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:title="@string/app_name"
        android:outlineProvider="none"
        app:titleTextColor="@android:color/white"
        android:background="@color/text_primary_dark"
        android:elevation="1dp" />
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context="com.heisen_berg.examplecode.MainActivity">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:onClick="startElasticDragLayoutActivity"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.heisen_berg.examplecode.ui.TextViewIosBold
                android:text="Elastic Drag\nLayout"
                android:gravity="center|left"
                android:paddingLeft="32dp"
                android:letterSpacing="0.04"
                android:textSize="22sp"
                android:background="@drawable/text_view_elastic_drag_activity_linear_gradient"
                android:id="@+id/activity_plaid_about"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:onClick="startInkViewPagerIndicatorActivity"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.heisen_berg.examplecode.ui.TextViewIosBold
                android:text="Ink ViewPager\nIndicator"
                android:gravity="center|left"
                android:paddingLeft="32dp"
                android:letterSpacing="0.04"
                android:textSize="22sp"
                android:background="@drawable/text_view_ink_view_pager_activity_linear_gradient"
                android:id="@+id/activity_plaid_ink_view_page_indicator"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:onClick="startFabToggleActivity"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.heisen_berg.examplecode.ui.TextViewIosBold
                android:text="Fab Toggle Activity"
                android:gravity="center|left"
                android:paddingLeft="32dp"
                android:letterSpacing="0.04"
                android:textSize="22sp"
                android:background="@drawable/text_view_shared_element_transition"
                android:id="@+id/activity_shared_element_transition"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
</LinearLayout>
