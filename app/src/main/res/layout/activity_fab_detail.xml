<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context="com.heisen_berg.examplecode.fabtoggle.FabDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_margin="32dp"
        android:clipToPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="@string/transition_designer_news_login">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/ios_font_bold"
                android:padding="16dp"
                android:textSize="32sp"
                android:text="Fab Toggle Activity"
                android:textColor="@color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/ios_font_regular"
                android:text="This is activity open's with the effect of FAB transformation.\n\nAnd again the big thing is that this FAB is not actually the FloatingActionButton, this is a ImageButton that tranform itself into the next activity XML."
                android:textSize="22sp"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
