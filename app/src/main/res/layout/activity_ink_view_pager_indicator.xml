<?xml version="1.0" encoding="utf-8"?>
<com.heisen_berg.examplecode.ui.ElasticDragDismissLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dragDismissDistance="112dp"
    app:dragDismissScale="0.95"
    android:id="@+id/draggable_frame"
    tools:context="com.heisen_berg.examplecode.inkviewpagerindicator.InkViewPagerIndicatorActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:overScrollMode="never"
        android:background="@color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.heisen_berg.examplecode.ui.InkPageIndicator
        android:id="@+id/view_pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:dotDiameter="10dp"
        app:dotGap="12dp"
        android:layout_gravity="bottom|center_horizontal"
        app:pageIndicatorColor="@color/page_indicator_dark"
        app:currentPageIndicatorColor="@color/page_indicator_dark_selected"/>

</com.heisen_berg.examplecode.ui.ElasticDragDismissLayout>
